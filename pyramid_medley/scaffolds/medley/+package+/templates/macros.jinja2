{% macro render_form_partial(form, method="POST", action="", class="form-horizontal") %}
<form class="{{ class }}" 
      role="form"
      method="{{ method }}" 
      action="{{ action or form.action }}"
      {% if form.is_multipart %} enctype="multipart/form-data"{% endif %}
      {% for k, v in kwargs.iteritems() %} {{ k }}="{{ v }}"{% endfor %}>

    {{ render_hidden_fields(form.hidden_fields) }}
    {{ caller() }}
    {{ render_submit_fields(form.submit_fields) }}
</form>
{% endmacro %}

{% macro render_form(form) %}

{% call render_form_partial(form, **kwargs) %}
    {% for field in form.editable_fields %}
    {% if field.type == 'BooleanField' %}
    {{ render_checkbox_field(field) }}
    {% else %}
    {{ render_field(field) }}
    {% endif %}
    {% endfor %}
 {% endcall %}

{% endmacro %}

{% macro render_submit_fields(fields) %}
    {% for field in fields %}
    {% if loop.first %}
    {{ field(class_="btn btn-primary") }}
    {% else %}
    {{ field(class_="btn") }}
    {% endif %}
    {% endfor %}
{% endmacro %}

{% macro render_hidden_fields(fields) %}
    {% if fields %}
    <div style="display:none;">
    {% for field in fields %}
    {{ field }}
    {% endfor %}
    </div>
    {% endif %}
{% endmacro %}

{% macro render_field(field, label=None) %}
   <div class="form-group{% if field.errors %} has-error{% endif %}">
        {{ field.label(label) }}
        <div class="controls">
        {{ field(**kwargs) }}
        </div>
        {% for error in field.errors %}
        <span class="help-block">{{ error }}</span>
        {% endfor %}
   </div>
{% endmacro %}


{% macro render_checkbox_field(field, label=None) %}
<div class="checkbox"{% if field.errors %} has-error{% endif %}">
    <label>{{ field(**kwargs) }} {{ label or field.label.text }}</label>
    {% for error in field.errors %}
    <span class="help-block">{{ error }}</span>
    {% endfor %}
</div>
{% endmacro %}


{% macro render_pagination(page) %}
{% if page.page_count > 1 %}
<ul class="pagination">
    {% if page.previous_page %}
    <li><a href="{{ page._url_generator(page.previous_page) }}">&laquo;</a></li>
    {% else %}
    <li class="disabled"><a href="#">&laquo;</a></li>
    {% endif %}
    {% for i in range(1, page.page_count + 1) %}
    <li{% if i == page.page %} class="active"{% endif %}><a href="{{ page._url_generator(i) }}">{{ i }}</a></li>
    {% endfor %}
    {% if page.next_page %}
    <li><a href="{{ page._url_generator(page.next_page) }}">&raquo;</a></li>
    {% else %}
    <li class="disabled"><a href="#">&raquo;</a></li>
    {% endif %}
</ul>
{% endif %}
{% endmacro %}
